{% extends 'base.html.twig' %}

{% block title %}Les agents spécials de ABAT{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class=container">
        <h1>Les agents de l'agence ABAT</h1>
        <p class="text-center">A ce jour l'agence ABAT compte {{ agents.getTotalItemCount }} agents</p>
        <div class="row ">
            <div class="col-md-3 mb-2">
                <h3>Filtrer</h3>

            </div>
            <div class="col-md-9 mb-2">

                <div class="row">
                    {% for agent in agents %}
                        <div class=" position-relative m-2 card " style="width: 18rem;">

                            <div class="card-body">
                                <h5 class="text-center"> Nom: {{ agent.firstname}} </h5>
                                <p class="price text-center"> <span class="">{{ agent.lastname}}</span> </p>
                                <p class="price text-center"> <span class="">{{ agent.dateNaissance |date("d/m/Y")}}</span> </p>
                                <p class="price text-center"> {{ agent.nationality}} </p>
                                <h5 class="text-center">Spécialité:</h5>
                                <ul>
                                    {% for specialite in agent.speciality %}
                                        <li>{{ specialite }}</li>
                                    {% endfor %}
                                </ul>
                             <h5 class="text-center">Missions:</h5>
                                <ul>
                                    {% for mission in agent.missions %}
                                        <li>{{ mission }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


        </div>
        <div class="navigation bg-danger">
            {{ knp_pagination_render(agents) }}
        </div>
    </div>
{% endblock %}
