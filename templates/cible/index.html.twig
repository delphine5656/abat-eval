{% extends 'base.html.twig' %}

{% block title %}Les cibles recherch√©es par l'agence ABAT{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class=container">
        <h1>Les cibles de l'agence ABAT</h1>
        <div class="row ">
            <div class="col-md-3 mb-2">
                <h3>Filtrer</h3>

            </div>
            <div class="col-md-9 mb-2">

                <div class="row">
                    {% for cible in cibles %}
                        <div class="card position-relative m-2 " style="width: 18rem;">

                            <div class="card-body">
                                <h5 class="text-center"> Nom: {{ cible.firstname}} </h5>
                                <p class="price text-center"> <span class="">{{ cible.lastname}}</span> </p>
                                <p class="price text-center"> <span class="">{{ cible.dateNaissance |date("d/m/Y")}}</span> </p>
                                <p class="price text-center"> {{ cible.nationality}} </p>
                                <h5 class="text-center">Mission d'appartenance:</h5>
                                </ul>
                                <h5 class="text-center">Missions:</h5>
                                <ul>
                                    {% for cible in cible.missions %}
                                        <li>{{ cible }}</li>
                                    {% endfor %}
                                </ul>



                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


        </div>
    </div>
{% endblock %}
