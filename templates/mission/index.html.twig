{% extends 'base.html.twig' %}

{% block title %}Les missions d'espionnage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class=container">
        <h1>Les missions de l'agence ABAT</h1>
        <div class="row ">

                <div class="col-md-3 mb-2">
                    <h3>Filtrer</h3>
                    {{ form(formView) }}
                </div>

            <div class="col-md-9 mb-2">

                <div class="row">
                    {% for mission in missions %}

                        <div class="cardTemplate position-relative m-2 " style="width: 18rem;">

                            <div class="card-body">
                                <h5 class="text-center"> titre: {{ mission.titre }}</h5>
                                <p class="price text-center"> <span class="">Statut:</span> {{ mission.statut }}</p>
                                <p class="text-center"><span>Pays:</span> {{ mission.pays }}</p>
                                <p class="text-center"><span>Type:</span> {{ mission.category }}</p>
                                <a href="{{ path('mission', {'slug' : mission.slug}) }}" class="button bg-danger btn-sm position-absolute  start-50 translate-middle mt-2">voir la mission</a>
                            </div>
                        </div>
                    {% endfor %}
            </div>
            </div>
        </div>
    </div>
{% endblock %}
