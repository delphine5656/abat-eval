{% extends 'base.html.twig' %}

{% block title %}Nos Missions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class=container">
    <h1>{{ mission.titre }}</h1>
    <div class="row">
        <div class="col-8 description">
            <h5 class="text-center"> titre: {{ mission.titre }}</h5>
            <p class="text-center">Nom de code: {{ mission.nomCode }}</p>
            <div class="card-body">
                <p class="text-center">Type de la mission: {{ mission.category }}</p>
                <p class="text-center">But de la mission: {{ mission.description }}</p>
                <p>Date du début de mission: {{ mission.dateDebut |date("d/m/Y") }}</p>
                <p>Date de fin de mission:{{ mission.dateFin |date("d/m/Y")}}</p>
                <p class="price text-center"> <span class="">Statut:</span> {{ mission.statut }}</p>
                <p class="text-center"><span>Pays:</span> {{ mission.pays }}</p>
                <p class="text-center"><span>Spécialité:</span> {{ mission.speciality }}</p>
                <h5>Les agents:</h5>
                <ul>
                    {% for agent in mission.agent %}
                        <li>{{ dump(agent) }}</li>
                    {% endfor %}
                </ul>

                <h5>Les contacts:</h5>
                <ul>
                    {% for contact in mission.contact %}
                        <li>{{ contact }}</li>
                    {% endfor %}
                </ul>

                <h5>Les cibles:</h5>
                <ul>
                    {% for cible in mission.cible %}
                     <li>{{ cible }}</li>
                    {% endfor %}
                </ul>

            </div>
     </div>

    </div>
    </div>
{% endblock %}