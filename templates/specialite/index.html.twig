{% extends 'base.html.twig' %}

{% block title %}Toutes les spécialités de nos agents{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class=container">
        <h1>Les specialités des agents de l'agence ABAT</h1>
        <div class="row ">
            <div class="col-md-12 mb-2">

                <div class="row">
                    {% for specialite in specialites%}
                        <div class="card position-relative m-2 " style="width: 18rem;">

                            <div class="card-body">
                                <h5 class="price text-center"> <span class="">Spécialité: {{specialite.name}}</span> </h5>
                                <h5 class="text-center">Les missions:</h5>
                                <ul>

                                    {% for mission in missions %}
                                        {% if specialite.name == mission.speciality %}
                                        <li>{{ mission.titre }}</li>
                                        {% endif %}
                                    {% endfor %}

                                </ul>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>


        </div>
    </div>
{% endblock %}
